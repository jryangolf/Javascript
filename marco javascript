        function linearsearch(value, list) {
            var found = false;
            var postion = "not found";
            var index = 0;

        while(!found && index < list.length) {
            if(list[index] == value) {
                found = true;
                position = index;
            }   
            else {
                index += 1;
            }
            return postion;
            }
        }
        function init(){
        var domlist = document.getElementById("list");
            if(domlist == null) {
